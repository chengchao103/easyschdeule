<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!--
		=====================================================================
		以下是appender的定义
		=====================================================================
	-->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="threshold" value="${log.level}" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd HH:mm:ss,SSS\} %-5p] [%t] %c{2\} - %m%n" />
		</layout>
	</appender>
	<appender name="ERROR-ALL" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${log.dir}/es-webapp-error.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="DEBUG-ALL" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${log.dir}/es-webapp-debug.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="INFO-ALL" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${log.dir}/es-webapp-info.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="OP-LOG" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${log.dir}/es-webapp-oplog.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%m%n" />
		</layout>
	</appender>
	<appender name="MESSAGE-LOG" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${log.dir}/es-webapp-messagelog.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d|%m%n" />
		</layout>
	</appender>

	<!--
		=====================================================================
		以下是logger的定义
		=====================================================================
	-->

	<logger name="com.taobao.ad" additivity="false">
		<level value="info" />
		<appender-ref ref="STDOUT" />
        <appender-ref ref="DEBUG-ALL" />
        <appender-ref ref="ERROR-ALL" />
	</logger>
	
	<logger name="OPLOG" additivity="false">
		<level value="info"/>
		<appender-ref ref="OP-LOG"/>
		<appender-ref ref="ERROR-ALL"/>
	</logger>

	<logger name="MESSAGELOG" additivity="false">
		<level value="info"/>
		<appender-ref ref="MESSAGE-LOG"/>
		<appender-ref ref="ERROR-ALL"/>
	</logger>

	<logger name="com.taobao.diamond" additivity="false">
		<level value="error" />
        <appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="javax.persistence" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="org.springframework" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="java.sql" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="com.opensymphony" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="org.apache" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="org.hibernate" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="httpclient" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<logger name="org.quartz" additivity="false">
		<level value="error" />
		<appender-ref ref="ERROR-ALL" />
	</logger>

	<!--
		=====================================================================
		Root logger的定义
		=====================================================================
	-->
	<root>
		<level value="${log.level}" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="OPLOG" />
		<appender-ref ref="MESSAGELOG" />
		<appender-ref ref="ERROR-ALL" />
		<appender-ref ref="DEBUG-ALL" />
		<appender-ref ref="INFO-ALL" />
	</root>
</log4j:configuration>
